<%errors = @invoice.errors[:base]%>
<%if params[:from]=="show"%>
	<%if errors.empty?%>
		<%info = "Invoice #{@invoice.number} is deleted successfully!"%>
		<%if params[:show]=='multiple'%>
			$('#invoice<%=@invoice.id%>').html($('<div class="ok bold"><%=info%></div>'))
		<%else%>
			<%flash[:notice] = info%>
			window.location = '<%=polymorphic_path(@invoice.class.new)%>'
		<%end%>
	<%else%>
		$('#invoice_delete_<%=@invoice.id%>').html('<%=errors.join('')%>')
	<%end%>
<%else%>
	<%id = "invoice_#{@invoice.id}"%>
	<%if errors.empty?%>
		$('#<%=id%>').addClass("strike")
		$('#<%=id%>').closest('.period').find('.reload-period').trigger('click')
	<%else%>
		$('<tr><td colspan="9" class="red bold"><%=errors.join('')%></td></tr>').insertAfter('#<%=id%>')
	<%end%>
<%end%>