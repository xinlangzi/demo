<h1>Viewing drug test for <%=h @trucker.name%></h1>

<table class="neat">
	<thead>
		<tr>
			<th>Date</th>
			<th>Type</th>
			<th>Status</th>
			<th>Comments</th>
		</tr>
	</thead>
	<tbody>
		<tr>
	    <td><%=h @drug_test.date%></td>
			<td><%=h @drug_test.test_type%></td>
			<td>
				 <%if @drug_test.passed.nil?%>
            N/A
          <%else%>
            <%=h @drug_test.passed? ? 'passed' : 'failed'%>
          <%end%>
			</td>
			<td><%=h @drug_test.comments%></td>
	  </tr>
	</tbody>

</table>

<%if current_user.is_admin?%>
	<p>
		<%= link_to 'Edit', edit_trucker_drug_test_path(@drug_test.trucker) %> |
		<%= link_to 'Delete', [@drug_test.trucker, @drug_test], :confirm => 'Are you sure you want to delete this drug test?', :method => :delete %><br/>
		<%= link_to 'Back to trucker', @drug_test.trucker %>
	</p>
<%end%>