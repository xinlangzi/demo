    tr.hidden#uninvoiced-receivables
      td
      td colspan=2
    tr
      th.text-left Payables
      td.number =  number_to_currency @total_uninvoiced_payables
      td
        = link_to sql_path(@uninvoiced_payables_sql.iid, tmpl: 'financials/show_all', partial: 'financials/health_indicator/container_charges', target: 'uninvoiced-payables'), remote: true, class: 'show-hide', rel: 'uninvoiced-payables' do
            i.red.fa.fa-list-ul
    tr.hidden#uninvoiced-payables
      td
      td colspan=2
    tr
      td.number.bold colspan=2 = number_to_currency @uninvoiced_difference
