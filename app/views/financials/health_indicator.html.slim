        = link_to sql_path(@uninvoiced_receivables_sql.iid, tmpl: 'financials/show_all', partial: 'financials/health_indicator/container_charges', target: 'uninvoiced-receivables'), remote: true, class: 'show-hide', rel: 'uninvoiced-receivables' do
